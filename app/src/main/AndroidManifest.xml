<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deja11.dejaphoto">

    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".MainActivity$LeftReceiver" android:exported="false">
            <intent-filter>
                <action android:name="left_button_receiver" />
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$RightReceiver" android:exported="false">
            <intent-filter>
                <action android:name="right_button_receiver" />
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$KarmaReceiver" android:exported="false">
            <intent-filter>
                <action android:name="karma_button_receiver" />
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$ReleaseReceiver" android:exported="false">
            <intent-filter>
                <action android:name="release_button_receiver" />
            </intent-filter>
        </receiver>

        <service
            android:name=".SetWallpaperService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>